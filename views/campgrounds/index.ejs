<%- include("../partials/header") %>
	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>Wellcome To YelpCamp</h1>
				<p>View our hand-picked campdrounds from all over thr world</p>
				<p>
					<a class="btn btn-secondary" href="/campgrounds/new">Add a New Cmapground</a>
				</p>
			</div>
		</header>
			
		<div class="row">
			<div class="col-lg-12">
				<h3>
					Our Most Popular Campdrounds
				</h3>
			</div>
		</div>
			
		<div class="row">
			<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-4 col-sm-6">
				<div class="card my-4">
					<img src="<%= campground.image %>" class="card-img-top">
					<div class="card-body">
						<h5><%= campground.name %></h5>
						<p><%= campground.description %></p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
			</div>
		<% }); %>
		</div>
	</div>
<%- include("../partials/footer") %>